

TO "SIDE :LENGTH :DEPTH
    IF :DEPTH = 0
        FORWARD :LENGTH
        STOP 
    ENDIF
    GO "SIDE :LENGTH / 3 :DEPTH - 1
    LEFT 60
    GO "SIDE :LENGTH / 3 :DEPTH - 1
    RIGHT 120
    GO "SIDE :LENGTH / 3 :DEPTH - 1
    LEFT 60
    GO "SIDE :LENGTH / 3 :DEPTH - 1
END

TO "SNOWFLAKE :LENGTH :DEPTH
    REPEAT 3
    [
        GO "SIDE :LENGTH :DEPTH
        RIGHT 120
    ]
END
 

CAMERA 0 0 150
GO "SNOWFLAKE 200 4

PRINT "[END OF PROGRAM]
